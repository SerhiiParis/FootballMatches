<div class="match-card">
    <div class="match-header">
        <p class="match-date">@Model.Date.ToString("dd.MM HH:mm")</p>
        <p class="match-teams">
            <strong>@Model.HomeTeam</strong> vs <strong>@Model.AwayTeam</strong>
        </p>
    </div>
    <div class="match-odds">
        <div class="odds odds-win">
            <p>@Model.HomeTeam</p>
            <p class="odds-value">@Model.Odds1</p>
        </div>
        <div class="odds odds-draw">
            <p>Draw</p>
            <p class="odds-value">@Model.OddsDraw</p>
        </div>
        <div class="odds odds-loss">
            <p>@Model.AwayTeam</p>
            <p class="odds-value">@Model.Odds2</p>
        </div>
    </div>
</div>
