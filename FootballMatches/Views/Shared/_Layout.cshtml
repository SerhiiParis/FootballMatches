<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FootballMatches</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
        }
        .main-header {
            width: 100%;
            padding: 16px;
            background-color: #FF6B6B;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            color: white;
            box-sizing: border-box;
        }
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }
        .logo h1 {
            font-size: 24px;
            font-weight: 700;
            margin: 0;
            letter-spacing: 1px;
        }
        .header-nav {
            display: flex;
            gap: 16px;
        }
        .nav-btn {
            padding: 8px 16px;
            font-size: 14px;
            font-weight: 600;
            color: #FFF9E3;
            border: 2px solid white;
            border-radius: 6px;
            background-color: #FF6B6B;
            cursor: pointer;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
    </style>

</head>
<body>
<header class="main-header">
    <div class="header-container">
        <div class="logo">
            <h1>NATIVE STATS</h1>
        </div>
        <nav class="header-nav">
            <button class="nav-btn">Register</button>
            <button class="nav-btn">Login</button>
        </nav>
    </div>
</header>
<main>
    @RenderBody()
</main>
<link rel="stylesheet" href="/css/styles.css" asp-append-version="true" />
@* ReSharper disable once Html.PathError *@
<script src="~/js/scripts.js" asp-append-version="true" defer></script>
</body>
</html>